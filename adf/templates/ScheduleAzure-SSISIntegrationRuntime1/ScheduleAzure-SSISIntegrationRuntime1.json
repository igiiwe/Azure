{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/ScheduleAzure-SSISIntegrationRuntime1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "startMyIR",
						"description": "Call REST API to start Azure-SSIS IR.",
						"type": "WebActivity",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"url": "https://management.azure.com/subscriptions/d27f576d-a452-4216-835d-f721cc61236f/resourcegroups/mydemo/providers/Microsoft.DataFactory/factories/demofactories/integrationRuntimes/ssis-packages/start?api-version=2018-06-01",
							"method": "POST",
							"body": {
								"message": "Start my IR"
							},
							"authentication": {
								"type": "MSI",
								"resource": "https://management.azure.com"
							}
						}
					},
					{
						"name": "Execute SSIS Package",
						"description": "Run a SSIS package by Execute SSIS Package Activity.",
						"type": "ExecuteSSISPackage",
						"dependsOn": [
							{
								"activity": "startMyIR",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"packageLocation": {
								"packagePath": "Mypackage/MigrationAzure/Traffic Package.dtsx"
							},
							"loggingLevel": "Basic",
							"environmentPath": null,
							"connectVia": {
								"referenceName": "ssis-packages",
								"type": "IntegrationRuntimeReference"
							},
							"executionCredential": {
								"domain": {
									"type": "AzureKeyVaultSecret",
									"store": {
										"referenceName": "AzureKeyvault",
										"type": "LinkedServiceReference"
									},
									"secretName": "ssiskey"
								},
								"userName": "igiiwe",
								"password": {
									"type": "SecureString",
									"value": "**********"
								}
							}
						}
					},
					{
						"name": "Stop Azure-SSIS IR",
						"description": "Call REST API to stop Azure-SSIS IR.",
						"type": "WebActivity",
						"dependsOn": [
							{
								"activity": "Execute SSIS Package",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"url": "https://management.azure.com/subscriptions/d27f576d-a452-4216-835d-f721cc61236f/resourcegroups/mydemo/providers/Microsoft.DataFactory/factories/demofactories/integrationRuntimes/ssis-packages/stop?api-version=2018-06-01",
							"method": "POST",
							"body": {
								"message": "Stop my IR"
							},
							"authentication": {
								"type": "MSI",
								"resource": "https://management.azure.com"
							}
						}
					}
				]
			}
		}
	]
}