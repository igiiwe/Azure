									{
										"source": {
											"name": "ShipName",
											"type": "String"
										},
										"sink": {
											"type": "String",
											"ordinal": 9
										}
									},
									{
										"source": {
											"name": "ShipAddress",
											"type": "String"
										},
										"sink": {
											"type": "String",
											"ordinal": 10
										}
